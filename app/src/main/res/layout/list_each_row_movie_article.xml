<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_10ssp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"

    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/imgViewCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />

                <com.peoplestrong.mvvmdemo.customfonts.MyTextView_LoraBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not started"
                    android:paddingRight="@dimen/_10ssp"
                    android:paddingLeft="@dimen/_10ssp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/_20ssp"
                    android:layout_alignParentLeft="true">

                </com.peoplestrong.mvvmdemo.customfonts.MyTextView_LoraBold>
                <com.peoplestrong.mvvmdemo.customfonts.MyTextView_LoraBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Items(s)"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/_10ssp"
                    android:paddingRight="@dimen/_10ssp"
                    android:layout_marginBottom="@dimen/_20ssp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">

                </com.peoplestrong.mvvmdemo.customfonts.MyTextView_LoraBold>
                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3ssp"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_marginBottom="@dimen/_12ssp"
                    android:background="@drawable/lineorder"
                    android:layout_alignParentBottom="true"
                    />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/_40ssp"
        android:layout_height="@dimen/_40ssp"
        android:src="@drawable/ic_play"
        android:layout_centerInParent="true"
        android:visibility="gone"
      />


        </RelativeLayout>
        <com.peoplestrong.mvvmdemo.customfonts.MyTextView_LoraBold
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@+id/rl_image"
            android:layout_margin="@dimen/_2ssp"
            android:textSize="@dimen/_12ssp"
            android:paddingLeft="@dimen/_10ssp"
            android:visibility="visible"
            android:paddingRight="@dimen/_10ssp"
            android:text="Survey | Flexible Benefit Plan FY-2020-21_V1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginBottom="@dimen/_5ssp"

            android:paddingLeft="@dimen/_10ssp"
            android:visibility="visible"
            android:paddingRight="@dimen/_10ssp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true">
                <com.peoplestrong.mvvmdemo.customfonts.MyTextView_LoraRegular

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"

                    android:textSize="@dimen/_10ssp"

                    android:visibility="visible"

                    android:text="End Date"/>
                <com.peoplestrong.mvvmdemo.customfonts.MyTextView_LoraRegular

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentRight="true"

                    android:textSize="@dimen/_10ssp"

                    android:visibility="visible"

                    android:text="20 Apr 20 at 20:00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">
                <com.peoplestrong.mvvmdemo.customfonts.MyTextView_LoraRegular

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"

                    android:textSize="@dimen/_10ssp"

                    android:visibility="visible"

                    android:text="End Date"/>
                <com.peoplestrong.mvvmdemo.customfonts.MyTextView_LoraRegular

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentRight="true"

                    android:textSize="@dimen/_10ssp"

                    android:visibility="visible"

                    android:text="20 Apr 20 at 20:00"/>
            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_image"
            android:layout_margin="@dimen/_2ssp"
            android:paddingLeft="@dimen/_10ssp"
            android:visibility="gone"
            android:paddingRight="@dimen/_10ssp"
            android:orientation="vertical">

            <com.peoplestrong.mvvmdemo.customfonts.MyTextView_LoraBold
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Title"
                android:textStyle="bold" />

            <com.peoplestrong.mvvmdemo.customfonts.MyTextView_LoraRegular
                android:id="@+id/tvAuthorAndPublishedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publish At"
                android:textColor="@android:color/darker_gray"
                 />

            <com.peoplestrong.mvvmdemo.customfonts.Textview_Lora_Italic
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="Description"

                android:maxLines="2"
                android:textColor="@color/gray" />

        </LinearLayout>
        <com.peoplestrong.mvvmdemo.customfonts.Textview_Lora_Italic
            android:id="@+id/txt_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:text="Survay"
            android:paddingLeft="@dimen/_10ssp"
            android:paddingRight="@dimen/_10ssp"
            android:paddingTop="@dimen/_3ssp"
            android:paddingBottom="@dimen/_3ssp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_20ssp"
            android:textColor="@color/white"
            android:background="@drawable/semoblueborder"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>